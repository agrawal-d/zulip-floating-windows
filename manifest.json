{
  "description": "Floating streams in Zulip",
  "manifest_version": 2,
  "name": "Zulip Floating Window",
  "version": "1.0",
  "homepage_url": "https://github.com/mdn/webextensions-examples/tree/master/borderify",
  "icons": {
    "48": "icons/logo-48.png"
  },
  "content_scripts": [
    {
      "matches": [
        "*://zulipchat.org/*",
        "*://chat.zulip.org/*"
      ],
      "js": [
        "floating-window.js"
      ],
      "css": [
        "floating-window.css"
      ]
    }
  ],
  "web_accessible_resources": [
    "floating-window.css"
  ]
}
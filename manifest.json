{
  "description": "Floating streams in Zulip",
  "manifest_version": 2,
  "name": "Zulip Floating Windows",
  "version": "1.0",
  "homepage_url": "https://github.com/mdn/webextensions-examples/tree/master/borderify",
  "icons": {
    "48": "icons/logo-48.png"
  },
  "content_scripts": [
    {
      "matches": ["*://zulipchat.org/*", "*://chat.zulip.org/*"],
      "js": ["src/floating-window.js"],
      "css": ["src/css/floating-window.css"]
    },
    {
      "matches": ["*://zulipchat.org/*", "*://chat.zulip.org/*"],
      "all_frames": true,
      "css": ["src/css/floating-iframe.css"]
    }
  ],
  "web_accessible_resources": ["src/css/foating-window.css"]
}
